<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/student_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@drawable/bg_circle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tab_badge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingBottom="1dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="1dp"
        android:text="@string/student_icon_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/student_image"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/student_image" />

    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/student_name"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/student_image"
        app:layout_constraintStart_toEndOf="@+id/student_image"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/student_description" />

    <TextView
        android:id="@+id/student_description"
        android:layout_width="285dp"
        android:layout_height="20dp"
        android:text="@string/student_details"
        app:layout_constraintBottom_toBottomOf="@+id/student_image"
        app:layout_constraintStart_toEndOf="@+id/student_image"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.050" />
</androidx.constraintlayout.widget.ConstraintLayout>